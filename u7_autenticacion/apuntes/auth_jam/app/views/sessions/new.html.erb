<h1>Sign In</h1>
<%= flash.now[:notice] if flash.now[:notice] %>
<%= form_with url: sessions_path, local: true do %>
   <div class='field'>
     <%= label_tag :email %>
     <%= email_field_tag :email, params[:email], placeholder: 'Enter you email address', required: true %>
   </div>

   <div class='field'>
     <%= label_tag :password %>
     <%= password_field_tag :password, params[:password], placeholder: 'Enter you email password', required: true %>
   </div>
   
   <%= submit_tag 'Sign In' %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= search_form_for @q do |f| %>
<%= f.label :state_eq, "Status" %>
<%= f.select :state_eq, options_for_select(Book.states ,
@q.state_eq), {include_blank: 'all'} %>
<%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :title) %></th>
      <th>Author</th>
      <th>State</th>
      <th>Loaned date</th>
      <th>Returning date</th>
      <th>Lend to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.state %></td>
        <td><%= book.loaned_date %></td>
        <td><%= book.returning_date %></td>
        <td><%= book.lend_to %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
